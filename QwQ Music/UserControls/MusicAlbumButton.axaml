<userControls:MusicAlbumButton xmlns="https://github.com/avaloniaui"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:models="clr-namespace:QwQ_Music.Models"
                               xmlns:userControls="clr-namespace:QwQ_Music.UserControls"
                               xmlns:control="clr-namespace:QwQ.Avalonia.Control;assembly=QwQ.Avalonia.Control"
                               x:DataType="models:MusicItemModel"
                               Margin="10"
                               Height="50"
                               Width="50"
                               Classes="None"
                               Foreground="White"
                               Background="{x:Null}"
                               x:Class="QwQ_Music.UserControls.MusicAlbumButton">

    <Border CornerRadius="8"
            ClipToBounds="True">
        <Panel>
            <Image Source="{Binding CoverPathProperty,Converter={StaticResource AlbumImageConverter}}"/>
            <Border Background="#33000000" IsHitTestVisible="False">
                <Border.IsVisible>
                    <MultiBinding
                        Converter="{x:Static BoolConverters.Or}">
                        <Binding ElementName="QuickPlaySwitchControl" Path="Condition" />
                        <Binding Path="$parent[userControls:MusicAlbumButton].ExternalMouseTouch" />
                    </MultiBinding>
                </Border.IsVisible>

                <control:SwitchControl x:Name="QuickPlaySwitchControl"
                                              Foreground="White" Margin="6">

                    <control:SwitchControl.Condition>
                        <MultiBinding
                            Converter="{StaticResource InstanceEqualityMultiConverter}">
                            <Binding
                                Path="$parent[userControls:MusicAlbumButton].CurrentMusicItem" />
                            <Binding />
                        </MultiBinding>
                    </control:SwitchControl.Condition>

                    <control:SwitchControl.TrueContent>

                        <control:SwitchControl
                            Condition="{Binding $parent[userControls:MusicAlbumButton].IsPlaying}">

                            <control:SwitchControl.TrueContent>

                                <control:SwitchControl

                                    Condition="{Binding $parent[userControls:MusicAlbumButton].IsPointerOver}">

                                    <control:SwitchControl.TrueContent>
                                        <PathIcon
                                            Data="{StaticResource PauseIconData}" />
                                    </control:SwitchControl.TrueContent>

                                    <control:SwitchControl.FalseContent>
                                        <StackPanel HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Orientation="Horizontal" Spacing="4">

                                            <Border Classes="Short" />
                                            <Border Classes="Long" />
                                            <Border Classes="Short" />

                                            <StackPanel.Styles>
                                                <Style Selector="Border">
                                                    <Setter Property="CornerRadius"
                                                            Value="3" />
                                                    <Setter Property="Width" Value="4" />
                                                    <Setter Property="Background"
                                                            Value="White" />
                                                </Style>

                                                <Style Selector="Border.Long">
                                                    <Setter Property="Height"
                                                            Value="20" />
                                                    <Style.Animations>
                                                        <Animation
                                                            IterationCount="Infinite"
                                                            Duration="0:0:1"
                                                            FillMode="Forward">
                                                            <KeyFrame Cue="0%">
                                                                <Setter
                                                                    Property="ScaleTransform.ScaleY"
                                                                    Value="1" />
                                                            </KeyFrame>
                                                            <KeyFrame Cue="50%">
                                                                <Setter
                                                                    Property="ScaleTransform.ScaleY"
                                                                    Value="0.5" />
                                                            </KeyFrame>
                                                            <KeyFrame Cue="100%">
                                                                <Setter
                                                                    Property="ScaleTransform.ScaleY"
                                                                    Value="1" />
                                                            </KeyFrame>
                                                        </Animation>
                                                    </Style.Animations>
                                                </Style>

                                                <Style Selector="Border.Short">
                                                    <Setter Property="Height"
                                                            Value="10" />
                                                    <Style.Animations>
                                                        <Animation
                                                            IterationCount="Infinite"
                                                            Duration="0:0:1"
                                                            FillMode="Forward">
                                                            <KeyFrame Cue="0%">
                                                                <Setter
                                                                    Property="ScaleTransform.ScaleY"
                                                                    Value="1" />
                                                            </KeyFrame>
                                                            <KeyFrame Cue="50%">
                                                                <Setter
                                                                    Property="ScaleTransform.ScaleY"
                                                                    Value="1.5" />
                                                            </KeyFrame>
                                                            <KeyFrame Cue="100%">
                                                                <Setter
                                                                    Property="ScaleTransform.ScaleY"
                                                                    Value="1" />
                                                            </KeyFrame>
                                                        </Animation>
                                                    </Style.Animations>
                                                </Style>

                                            </StackPanel.Styles>
                                        </StackPanel>
                                    </control:SwitchControl.FalseContent>
                                </control:SwitchControl>

                            </control:SwitchControl.TrueContent>

                        </control:SwitchControl>
                    </control:SwitchControl.TrueContent>

                    <control:SwitchControl.FalseContent>
                        <PathIcon
                            Data="{StaticResource PlayIconData}" />
                    </control:SwitchControl.FalseContent>

                </control:SwitchControl>

            </Border>
            
        </Panel>
    </Border>
</userControls:MusicAlbumButton>